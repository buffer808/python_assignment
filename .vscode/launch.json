    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:15000",
            "webRoot": "${workspaceFolder}/financial",
        },
        {
            "name": "Pyhton: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 9009
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/financial",
                    "remoteRoot": "/financial"
                }
            ]
        },
        
    ]
}